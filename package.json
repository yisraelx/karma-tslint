{
  "name": "karma-tslint",
  "version": "0.0.0-semantically-released",
  "description": "Karma tslint plugin",
  "main": "lib/index.js",
  "typeings": "lib/index.d.ts",
  "files": [
    "lib",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "karma",
    "karma-preprocessor",
    "karma-tslint-preprocessor",
    "karma-plugin",
    "tslint"
  ],
  "scripts": {
    "build": "tsc --project src",
    "ci:script": "yarn ready",
    "ci:after": "yarn semantic-release",
    "clean": "rimraf lib",
    "cm": "yarn ready && git-cz",
    "commitmsg": "validate-commit-msg",
    "lint": "tslint src/**/*.ts",
    "precommit": "yarn ready",
    "prepush": "yarn ready",
    "ready": "run-s clean lint build",
    "semantic-release": "semantic-release",
    "watch": "yarn build --watch"
  },
  "author": {
    "name": "Yisrael Eliav",
    "email": "yisraelx@gmail.com",
    "url": "https://github.com/yisraelx/karma-tslint"
  },
  "license": "MIT",
  "homepage": "https://github.com/yisraelx/karma-tslint",
  "repository": {
    "type": "git",
    "url": "https://github.com/yisraelx/karma-tslint.git"
  },
  "bugs": {
    "url": "https://github.com/yisraelx/karma-tslint/issues"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "helpMessage": "Commit message violates the rules defined for this project. Please, execute `npm run cm` to generate a correct commit message with `commitizen`"
    }
  },
  "peerDependencies": {
    "tslint": "^5.5.0"
  },
  "devDependencies": {
    "@types/log4js": "2.3.5",
    "@types/node": "^9.4.1",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "semantic-release": "^12.4.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1",
    "validate-commit-msg": "^2.12.2",
    "yarn": "^1.3.2"
  }
}
